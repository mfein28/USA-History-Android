<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.us.mattfein.ushistory.Documents.docproper.Carolina.CarolinaText">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/scone" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="South Carolina Tests the Union"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/scfirst"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/SouthCarolinaone"
                tools:text="@string/SouthCarolinaone" />

            <TextView
                android:id="@+id/sctwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SCtwo" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sctwo" />

            <TextView
                android:id="@+id/scthree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SCthree"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
